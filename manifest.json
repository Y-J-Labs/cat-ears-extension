{
  "name": "Cat Ears Logos",
  "description": "Adds cat ears to the logos of major websites.",
  "version": "0.1.0",
  "manifest_version": 3,

  "permissions": [
    "activeTab"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.instagram.com/*",
        "https://*.facebook.com/*",
        "https://*.amazon.com/*",
        "https://*.twitter.com/*",
        "https://*.tiktok.com/*"
      ],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.instagram.com/*",
        "https://*.facebook.com/*",
        "https://*.amazon.com/*",
        "https://*.twitter.com/*",
        "https://*.tiktok.com/*"
      ],
      "resources": [
        "assets/YouTube.svg",
        "assets/Instagram.svg",
        "assets/Facebook.svg",
        "assets/Amazon.png",
        "assets/Twitter.svg",
        "assets/TikTok.svg",        
        "assets/power-off.svg",
        "assets/power-on.svg"
      ]
    }
  ],

  "action": {
    "default_title": "Cat Ears Extension",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/logo.svg",
      "24": "assets/logo.svg",
      "32": "assets/logo.svg"
    }
  }
}
